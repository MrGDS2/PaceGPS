<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/alt_bgimage"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/overlayBg"
    >

    <TextView
        android:id="@+id/ty_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank You"
        android:textSize="34sp"
       android:gravity="center"
        android:textColor="@android:color/white"
        />


    <TextView
        android:id="@+id/ty_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thanks_body1"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        />


    <TextView
        android:id="@+id/ty_body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thanks_body2"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        />

</LinearLayout>


</RelativeLayout>